<!DOCTYPE html>
<html lang="en" ng-app='app'>
    {{> head}}
    {{> navbar}}
    {{> navmenu}}
<body>
<div class="containerComanda col-md-11 col-md-offset-1 col-xs-offset-3  col-xs-9" ng-controller='controlador'>
        
        <div class=" col-md-6 col-xs-12 conHorizontal1 ">
            <img src="/assets/img/comida-menu.png" alt="" class="col-md-offset-1 img" >
           <form action=""> 
                <div class="col-md-5 col-md-offset-1 col-xs-12 formcomi centroformandbutom" >
                        <div class="form-group">
                        <label for="titulo" style="color: black"><b> *Título</b></label>
                        <br>
                        <input type="text" placeholder="Max 17 caracteres" name="nombre" id="nombre"  class="inputalim form-control" maxlength="17" ng-model="frmData.nombre" pattern="[A-Za-z ]+" required>
                            

                        </div>
                        <br>
                        <div class="form-group">
                            <label for="descripcion" style="color: black"><b>*Descripción</b></label>
                            <br>
                            <input type="text" placeholder="Max 60 caracteres" name="descripcion" id="descripcion" class="inputalim form-control" maxlength="60" ng-model="frmData.descripcion" pattern="[A-Za-z0-9 ]+" required >
                        </div>
                        <br>
                        <div class="form-group col-md-6 col-xs-12">
                            <label for="calorias" style="color: black"><b>*Calorias por porción</b></label>
                            <br>
                            <input type="text" placeholder="Max 17 caracteres" name="calorias" id="calorias" class="inputalim form-control" maxlength="7" ng-model="frmData.calorias" pattern="[0-9]+" required  >
                        </div>
                        <div class="form-group col-md-6  col-xs-12" style="float:left">
                            <label for="medidas" style="color: black"><b>*Unidades de medida</b></label>
                            <br>
                            <input type="text" placeholder="Max 17 caracteres" name="medidas" id="medidas" class="inputalim form-control" maxlength="17" ng-model="frmData.medidas" pattern="[A-Za-z ]+" required >
                        </div>
                </div> 
            </form>
        </div>
        <br>
        <div class="col-md-6 col-xs-12 imagenform centroformandbutom">                                            
            <div>
                <img id="img1" ng-show="imagen" class="imagencomida" ng-click="cancelarImagen();$event.stopPropagation();"><br/>
                <input id="inputFile1" type="file" ng-show="imagen" name="inputFile1" ng-model="frmData.inputFile1">
                <img src="/assets/img/imagen-predeterminado-comida-menu.png" alt="" srcset="" class="imagencomida" ng-show="!imagen" ng-click="cambiarImagen()">
            </div>
            <br>
            <div>
            <button type="submit" class="formbuttom btn" ng-show="!modify" ng-click="agregarComida();$event.stopPropagation();">Subir menú</button>
            <button type="submit" class="formbuttom btn" ng-show="modify" ng-click="modifyComida();$event.stopPropagation();">Modificar Menu</button>
            <button type="submit" class="cancelarbtn btn" ng-show="modify" ng-click="cancelarModify();$event.stopPropagation();">Cancelar</button>
            </div>                 
        </div>
        
        <div class="col-md-12 col-xs-12 conHorizontal2">
            <div class="table-responsive">
                <table class="table table-condensed table-hover">
                    <tr>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>Calorias por porción</th>
                        <th>Unidades de medida</th>
                        
                    </tr>
                    <tr ng-repeat="comida in comidas track by $index">
                       <td>\{{ comida.nombre }}</td> 
                       <td>\{{ comida.descripcion }}</td>
                       <td>\{{ comida.calorias }}</td>
                       <td>\{{ comida.medidas }}</td>
                       <td class="editformComanda"><a href="#" ng-click="selectObject(comida);$event.stopPropagation();" > edit </a></td>
                       
                    </tr>    
                </table>
            </div>

        </div>
        
    </div>
</body>
</html>
<script src="/assets/js/Controllers/Menu/ComidaController.js"> </script>